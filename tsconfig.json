{
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@lib/*": [
        "lib/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@layouts/*": [
        "layouts/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "virtual:pwa-register": ["node_modules/vite-plugin-pwa"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "vite/client",
      "vite-plugin-pwa/client",
      "vite-plugin-pwa/info"
    ],
  },
  "files": [
    "node_modules/vite-plugin-pwa/client.d.ts"
  ],
  "include": [
    "./**/*",
    "node_modules/**/*.d.ts",
    "node_modules/vite-plugin-pwa/client.d.ts"
  ],
  "exclude": [
    "dist"
  ]
}